@startuml YTL_Capability_Map_TO_BE
title YTL Cement - Business Capability Map (Target State - S/4HANA + MVP)
skinparam backgroundColor #F5F5F5
skinparam roundCorners 15

package "YTL CEMENT GROUP" {

  rectangle "STRATEGIC LEVEL" as strategic_level #f0f0f0 {
    rectangle "Procure-to-Pay" as p2p #FFF4E6
    rectangle "Order-to-Cash" as o2c #FFF4E6
    rectangle "Make-to-Stock" as mts #FFF4E6
    rectangle "Finance & Reporting" as fin_rep #FFF4E6
  }

  rectangle "BUSINESS CAPABILITY LEVEL" as capability_level #f0f0f0 {
    rectangle "Invoice\nProcessing" as invoice_cap #66BB6A
    rectangle "GL\nReconciliation" as gl_cap #66BB6A
    rectangle "Vendor\nManagement" as vendor_cap #66BB6A
    rectangle "SoD\nCompliance" as sod_cap #66BB6A
    rectangle "e-Invoice\nCompliance" as einvoice_cap #66BB6A
  }

  rectangle "FUNCTIONAL LEVEL" as func_level #f0f0f0 {
    rectangle "Automated PO\nGeneration" as po_func #A8D5BA
    rectangle "Continuous 3-Way\nMatching" as match_func #A8D5BA
    rectangle "Real-Time GL\nPosting" as gl_func #A8D5BA
    rectangle "Real-Time SoD\nMonitoring" as sod_func #A8D5BA
    rectangle "Automated MyInvois\nSubmission" as xml_func #A8D5BA
  }

  rectangle "MVP MODULE LAYER" as mvp_layer #E3F2FD {
    rectangle "Invoice\nMatching" as invoice_mvp #42A5F5
    rectangle "GL Anomaly\nDetector" as gl_mvp #42A5F5
    rectangle "Vendor Data\nQuality" as vendor_mvp #42A5F5
    rectangle "SoD\nAnalyzer" as sod_mvp #42A5F5
    rectangle "e-Invoice\nModule" as einvoice_mvp #42A5F5
  }
}

strategic_level --|> capability_level
capability_level --|> func_level
func_level --|> mvp_layer

note right of invoice_cap
  <color:green>GREEN</color> = Automated
  Target: 99.7% auto-match rate
  Benefit: $280K-560K savings
  Timeline: Continuous monitoring
end note

note right of gl_cap
  <color:green>GREEN</color> = Real-Time
  Target: 3-4 day close
  Benefit: $192K labor savings
  Timeline: Real-time anomaly detection
end note

note right of vendor_cap
  <color:green>GREEN</color> = Data Quality
  Target: <5% duplicates
  Benefit: $200K-400K recovery
  Timeline: Automated de-duplication
end note

note right of sod_cap
  <color:green>GREEN</color> = Real-Time
  Target: Instant violation detection
  Benefit: Compliance confidence
  Timeline: 24/7 monitoring
end note

note right of einvoice_cap
  <color:green>GREEN</color> = Automated
  Target: 100% LHDN compliance
  Benefit: 0.5 FTE labor savings
  Timeline: Automated submission
end note

legend right
  | Color | Meaning |
  | <color:red>RED</color> | Manual, Error-Prone, High Risk |
  | <color:gold>YELLOW</color> | Partially Automated |
  | <color:green>GREEN</color> | Fully Automated, Optimized |
end legend

@enduml
