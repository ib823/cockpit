    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "analyze": "ANALYZE=true pnpm build"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.1"
