@startuml YTL_Organizational_View
title YTL Cement - Organization Structure & Stakeholder Matrix
skinparam backgroundColor #F5F5F5

rectangle "YTL CEMENT GROUP" {

  rectangle "PAHANG CEMENT PLANT (Manufacturing)" as plant_org #FFE6E6 {
    component [Plant Manager\n(1 user)] as plant_mgr
    component [Finance Team\n(9 users)] as fin_team
    component [Procurement Team\n(11 users)] as proc_team
    component [Production & Warehouse\n(21 users)] as prod_team
    component [Senior Management\n(5 users - Reports Only)] as mgmt_reports
  }

  rectangle "YTL CEMENT MARKETING COMPANY" as marketing_org #E6E6FF {
    component [Sales Manager\n(1 user)] as sales_mgr
    component [Finance Team\n(3 users)] as mkt_fin_team
    component [Senior Management\n(0 users - No operation)] as mkt_mgmt
  }

}

rectangle "STEERING COMMITTEE" as steering #FFFFCC {
  component [CFO\n(Finance Sponsor)] as cfo
  component [COO\n(Operations Sponsor)] as coo
  component [CIO\n(Technology Sponsor)] as cio
  component [Plant Manager\n(Business Lead)] as plant_lead
}

rectangle "PROJECT ORGANIZATION" as proj_org #CCFFCC {
  rectangle "Project Management" {
    component [Project Manager\n(SI Lead)] as pm
    component [Assistant PM\n(Client Lead)] as apm
  }

  rectangle "Technical Stream" {
    component [Technical Lead] as tech_lead
    component [Lead Developer] as dev_lead
    component [DBA] as dba
    component [Infrastructure Lead] as infra_lead
  }

  rectangle "Functional Stream" {
    component [Finance Lead] as fin_lead
    component [Procurement Lead] as proc_lead
    component [Production Lead] as prod_lead
    component [Sales Lead] as sales_lead
  }

  rectangle "Quality Assurance" {
    component [QA Lead] as qa_lead
    component [Test Managers] as test_mgrs
  }
}

rectangle "STAKEHOLDER ANALYSIS" as stakeholder {
  rectangle "HIGH PRIORITY\n(Decision Makers)" as high_priority #FF9999 {
    component [CFO] as cfo_sp
    component [COO] as coo_sp
    component [CIO] as cio_sp
    component [Finance Director] as fin_dir
  }

  rectangle "MEDIUM PRIORITY\n(Power Users)" as med_priority #FFFF99 {
    component [Procurement Manager] as proc_mgr_sp
    component [Plant Manager] as plant_mgr_sp
    component [Sales Manager] as sales_mgr_sp
    component [Accounting Manager] as acc_mgr_sp
  }

  rectangle "OPERATIONAL USERS\n(Daily Users)" as ops_users #99FF99 {
    component [Finance Staff (9)] as fin_staff_sp
    component [Procurement Staff (11)] as proc_staff_sp
    component [Production Staff (21)] as prod_staff_sp
    component [Marketing Staff (3)] as mkt_staff_sp
  }
}

rectangle "COMMUNICATION PLAN" as comms #E6E6FF {
  component [Steering Committee:\nWeekly Executive Briefs] as steer_comm
  component [Functional Leads:\nTwice Weekly Sync] as func_comm
  component [All Project Team:\nDaily Stand-up] as daily_standup
  component [User Community:\nWeekly Training] as user_training
}

note bottom of plant_org
